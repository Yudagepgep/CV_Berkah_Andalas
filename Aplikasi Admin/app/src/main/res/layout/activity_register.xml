<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"

    tools:context=".LOGIN.Register">

    <LinearLayout
        android:background="@drawable/color_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">




        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="MENDAFTAR"
            android:textColor="#000"
            android:textSize="16dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"/>

        <EditText
            android:textColorHint="#000"
            android:paddingLeft="10dp"
            android:background="@drawable/form_input"
            android:textColor="#000"
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Nama Lengkap" />

        <EditText
            android:textColorHint="#000"
            android:paddingLeft="10dp"
            android:background="@drawable/form_input"
            android:textColor="#000"
            android:id="@+id/instansi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Instansi/Organisasi" />

        <EditText
            android:textColorHint="#000"
            android:paddingLeft="10dp"
            android:background="@drawable/form_input"
            android:textColor="#000"
            android:id="@+id/email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="Email" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Layoutinput1"
            app:endIconMode="password_toggle"
            android:layout_width="match_parent"
            android:textColorHint="#000"
            android:layout_height="wrap_content">

            <EditText
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:background="@drawable/form_input"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:password="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Layoutinput2"
            app:endIconMode="password_toggle"
            android:layout_width="match_parent"
            android:textColorHint="#000"
            android:layout_height="wrap_content">

            <EditText
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:id="@+id/confirm_pass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/form_input"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:password="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <EditText
            android:textColorHint="#000"
            android:paddingLeft="10dp"
            android:background="@drawable/form_input"
            android:textColor="#000"
            android:id="@+id/handphone"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="No.Handphone" />



        <ProgressBar
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:id="@+id/loading"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        </ProgressBar>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_register"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="16dp"
            android:layout_width="300dp"
            android:layout_marginBottom="15dp"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/butt_masuk"
            android:layout_height="60dp"
            android:text="Register" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:text="Login"
            android:background="#00555555"
            android:textColor="#FF000080"
            android:textStyle="bold" />



    </LinearLayout>

</ScrollView>