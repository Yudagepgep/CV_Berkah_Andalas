<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LOGIN.Login">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/cv"
            android:layout_width="wrap_content"
            android:layout_height="80dp"></ImageView>
        <TextView
            android:layout_marginTop="20dp"
            android:textColor="#FF000000"
            android:textAlignment="center"
            android:text="Silahkan Login Dahulu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:paddingLeft="8dp"
        android:paddingRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/color_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Masuk"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <EditText
                android:drawablePadding="13dp"
                android:textColorHint="#2CA7E0"
                android:drawableLeft="@drawable/person"
                android:textColor="#000"
                android:background="@drawable/form_input"
                android:layout_height="50dp"
                android:id="@+id/txt_email"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:singleLine="true" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/Layoutinput1"
                app:endIconMode="password_toggle"
                android:layout_width="match_parent"
                app:startIconDrawable="@drawable/pass"
                android:textColorHint="#2CA7E0"
                app:startIconTint="#1D18CF"
                android:layout_height="wrap_content">
                <EditText
                    android:textColor="#000"
                    android:textColorHint="#2CA7E0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/form_input"
                    android:layout_height="50dp"
                    android:id="@+id/txt_password"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:inputType="textPassword"
                    android:hint="Password" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <ProgressBar
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:id="@+id/loading"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        </ProgressBar>

        <Button
            android:id="@+id/btn_login"
            android:padding="20dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_width="300dp"
            android:textColor="#fff"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp"
            android:text="LOGIN"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/butt_masuk"
            android:layout_height="60dp"

             />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="#00555555"
            android:textColor="#FF000080"
            android:text="Register"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>