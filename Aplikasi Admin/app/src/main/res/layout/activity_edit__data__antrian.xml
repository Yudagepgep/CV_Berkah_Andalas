<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tabel.Edit_Data_Antrian">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/form_menu"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Nama User "
                android:textColor="#000"
                android:textSize="14dp" />

            <Spinner
                android:id="@+id/id_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFCCCCFF"
                android:paddingLeft="10dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Nama Produk"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/id_produk"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFCCCCFF"
                android:paddingLeft="10dp" />



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Tanggal"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/tanggal"
                android:paddingLeft="10dp"
                android:focusable="false"
                android:background="@drawable/form"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Quantity"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/quantity"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:background="@drawable/form"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Ukuran Bahan"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:id="@+id/ukuran_bahan"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <EditText
                    android:id="@+id/lbr_ctk"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/form"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp" />

                <TextView
                    android:id="@+id/x1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:paddingRight="10dp"
                    android:text="X"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tg_ctk"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/form"
                    android:inputType="number"
                    android:paddingLeft="10dp" />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Ukuran Area Cetak"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/area_cetak"
                android:layout_width="match_parent"
                android:layout_height="40dp">


                <EditText
                    android:id="@+id/lbr_area"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/form"
                    android:inputType="number"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/x2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:paddingRight="10dp"
                    android:text="X"
                    android:textSize="26dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/tg_area"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/form"
                    android:inputType="number"
                    android:paddingLeft="10dp" />

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Laba                      Rp."
                android:layout_height="40dp"/>

            <EditText
                android:inputType="number"
                android:background="@drawable/form"
                android:id="@+id/laba"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>

        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:background="#000"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Penanggung Jawab"
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/input_jwb"
                android:background="@drawable/form"
                android:textSize="18dp"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>

        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:background="#000"
            android:layout_height="1dp">

        </View>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Status      "
                android:layout_height="40dp"/>

            <EditText
                android:id="@+id/input_sts"
                android:background="@drawable/form"
                android:textSize="18dp"
                android:text="Dalam Proses"
                android:paddingLeft="15dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:background="#000"
            android:layout_height="1dp">

        </View>
        <LinearLayout
            android:layout_marginTop="130dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/kembali_update"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_menu"
                android:text="Kembali"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/simpan_update"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_menu"
                android:text="Update"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>