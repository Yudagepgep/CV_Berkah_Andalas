<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/form_menu"
    android:layout_height="match_parent"
    tools:context=".Plat.Tambah_Plat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Id Plat"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/tmb_plt_id_plat"
                android:paddingLeft="10dp"
                android:background="@drawable/form"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Nama Plat"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/tmb_plt_nama_plat"
                android:paddingLeft="10dp"
                android:background="@drawable/form"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Harga Plat"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/tmb_plt_harga_plat"
                android:paddingLeft="10dp"
                android:background="@drawable/form"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="130dp"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Upah Cetak"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/tmb_plt_upah_cetak"
                android:paddingLeft="10dp"
                android:background="@drawable/form"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="130dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/kembali_plat"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_menu"
                android:text="Kembali"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/tmb_plat"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/form_menu"
                android:text="Tambah"
                android:textColor="@android:color/white"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>